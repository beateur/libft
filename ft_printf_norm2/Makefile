OBJ 	= 	$(SRC:.c=.o)

FLAGS =	-Iincludes

CLEAR:=$(shell clear)

all: $(NAME) includes/

$(NAME): $(OBJ)
	@ar rcs $(NAME) $(OBJ)

clean:
	@/bin/rm -Rf $(OBJ)
	@make clean -C libft

fclean: clean
	@/bin/rm -Rf $(NAME)
	@make fclean -C libft

re: fclean all

%.o: %.c
	@gcc $(FLAGS) -o $@ -c $<

sh: all
		gcc -g -fsanitize=address ../ft_printf_norm/main_tests/main_sh.c $(NAME) -Iincludes && ./a.out

kalash: all
		gcc ../ft_printf/main_tests/mainprintf.c $(NAME) -Iincludes && ./a.out

nuke: all
		gcc ../ft_printf/main_tests/main_nuke.c $(NAME) -Iincludes && ./a.out

test_unit: all
		gcc ../ft_printf/main_tests/main_test.c $(NAME) -Iincludes && ./a.out

pourri: all
		gcc -g ../ft_printf/main_tests/main_pourri.c $(NAME) -Iincludes && ./a.out
